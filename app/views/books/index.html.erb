<div class="container">
  <div class="row">
    <%= render 'books/error', model: @book %>
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table book-index">
        <h2>Books</h2>
        <thred>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thred>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
               <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image,size: "80x80" %>
               <% else %>
                <%= image_tag "no_image.jpg",size: "80x80" %>
               <% end %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>